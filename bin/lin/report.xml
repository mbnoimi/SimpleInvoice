    <width>100</width>
    <height>160</height>
    <weight>1</weight>
    <borderwidth>1</borderwidth>
    <bgcolor>
     <red>35</red>
     <green>229</green>
     <blue>113</blue>
    </bgcolor>
   </rect>
   <field>
    <rect>
     <x>480</x>
     <y>130</y>
     <width>145</width>
     <height>25</height>
    </rect>
    <font>
     <face>Helvetica</face>
     <size>12</size>
     <weight>normal</weight>
    </font>
    <left/>
    <top/>
    <data>
     <query>invoice</query>
     <column>title</column>
    </data>
   </field>
   <label>
    <rect>
     <x>190</x>
